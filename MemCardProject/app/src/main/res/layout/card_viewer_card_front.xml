<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewFront"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_marginBottom="@dimen/standard_padding"
        android:layout_marginEnd="@dimen/standard_padding"
        android:layout_marginLeft="@dimen/standard_padding"
        android:layout_marginRight="@dimen/standard_padding"
        android:layout_marginStart="@dimen/standard_padding"
        android:layout_marginTop="@dimen/standard_padding"
        app:cardCornerRadius="@dimen/standard_padding"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewCardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageViewCardSetColourFront"
                android:layout_width="@dimen/set_colour_size"
                android:layout_height="@dimen/card_height"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/no_padding"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/no_padding"
                android:layout_marginStart="@dimen/no_padding"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/no_padding"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/imageViewTestReady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/test_exclaim"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/small_padding"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginEnd="@dimen/small_padding"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textViewCardSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="@dimen/descriptor_text"
                app:layout_constraintLeft_toRightOf="@+id/imageViewCardSetColourFront"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/standard_padding" />

            <TextView
                android:id="@+id/textViewCardFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_padding"
                android:layout_marginRight="@dimen/standard_padding"
                android:layout_marginTop="@dimen/standard_padding"
                android:textSize="@dimen/input_text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCardSet"
                app:layout_constraintVertical_bias="0.305"
                android:layout_marginStart="@dimen/standard_padding"
                android:layout_marginEnd="@dimen/standard_padding"
                app:layout_constraintLeft_toRightOf="@+id/imageViewCardSetColourFront"
                android:layout_marginLeft="@dimen/standard_padding"
                app:layout_constraintHorizontal_bias="0.388"
                tools:layout_editor_absoluteX="@dimen/standard_padding" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
