<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewSetColour"
        android:layout_width="@dimen/colour_side"
        android:layout_height="@dimen/colour_side"
        android:padding="@dimen/spinner_padding"
        app:srcCompat="@color/cardview_light_background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textViewSetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/spinner_padding"
        android:textSize="@dimen/input_text" />

    <TextView
        android:id="@+id/textViewSetNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spinner_padding"
        android:visibility="gone" />

</LinearLayout>